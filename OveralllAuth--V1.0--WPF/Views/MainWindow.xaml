<Window
    x:Class="OveralllAuth__V1._0__WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="1980"
    Height="1080"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None">
    <Border Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  左侧菜单  -->
            <Border
                x:Name="menuBoard"
                Width="250"
                Padding="10"
                Background="{DynamicResource SecundaryBackgroundColor}"
                CornerRadius="10 0 0 10">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="menuBoardTransform" X="0" />
                </Border.RenderTransform>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="120" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="46"
                            Height="36"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Source="/Assets/Images/logo.jpg"
                            Stretch="Fill" />
                        <Label
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="权限管理"
                            FontSize="24"
                            FontWeight="Bold">
                            <Label.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="#12C092" />
                                    <GradientStop Offset="1" Color="#3A6AA9" />
                                </LinearGradientBrush>
                            </Label.Foreground>
                        </Label>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <Button Command="{Binding GoView1Cmm}">页面一</Button>
                        <RadioButton
                            Margin="0,30,0,0"
                            Command="{Binding HomeCmm}"
                            Content="仪表盘"
                            Style="{DynamicResource MenuRadioButtonStyle}"
                            Tag="{DynamicResource home}" />

                        <RadioButton
                            Margin="0,30,0,0"
                            Content="用户管理"
                            Style="{DynamicResource MenuRadioButtonStyle}"
                            Tag="{DynamicResource users}" />

                        <RadioButton
                            Margin="0,30,0,0"
                            Content="角色管理"
                            Style="{DynamicResource MenuRadioButtonStyle}"
                            Tag="{DynamicResource role}" />

                        <RadioButton
                            Margin="0,30,0,0"
                            Content="菜单管理"
                            Style="{DynamicResource MenuRadioButtonStyle}"
                            Tag="{DynamicResource menu}" />
                    </StackPanel>

                    <Border
                        Grid.Row="2"
                        Margin="5"
                        CornerRadius="15">
                        <Border.BitmapEffect>
                            <DropShadowBitmapEffect
                                Direction="0"
                                ShadowDepth="1"
                                Softness="0.8"
                                Color="#12C092" />
                        </Border.BitmapEffect>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="0" Color="#12C092" />
                                <GradientStop Offset="1" Color="#3A6AA9" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="10,20,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32*" />
                                <ColumnDefinition Width="101*" />
                                <ColumnDefinition Width="67*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.ColumnSpan="2"
                                Margin="0,-12,0,0"
                                Content="{Binding CurrentDate}"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource SecundaryWhiteColor}" />
                            <Label
                                Grid.ColumnSpan="2"
                                Margin="0,18,0,0"
                                Content="{Binding CurrentTime}"
                                FontSize="24"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TertiaryWhiteColor}" />
                            <Path
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"

                                Fill="{DynamicResource TertiaryWhiteColor}"
                                Stretch="Uniform" />
                        </Grid>
                    </Border>

                    <Border
                        Grid.Row="3"
                        Width="110"
                        Height="35"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource TertiaryBackgroundColor}"
                        CornerRadius="18">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Path
                                Width="16"
                                Height="16"
                                VerticalAlignment="Center"
                                Data="{DynamicResource sun}"
                                Fill="{DynamicResource PrimaryYellowColor}"
                                Stretch="UniformToFill" />
                            <ToggleButton
                                x:Name="Themes"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Right"
                                IsChecked="False"
                                Style="{DynamicResource ToggleButtonStyle}" />
                            <Path
                                Width="16"
                                Height="16"
                                VerticalAlignment="Center"
                                Data="{DynamicResource moon}"
                                Fill="{DynamicResource PrimaryWhiteColor}"
                                Stretch="Fill" />
                        </StackPanel>
                    </Border>

                    <Button
                        Grid.Row="3"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        Content="{DynamicResource settings}"
                        Style="{DynamicResource SettingButtonsStyle}" />

                    <StackPanel Grid.Row="4" Orientation="Horizontal">



                        <Button
                            Width="50"
                            Height="50"
                            HorizontalAlignment="Left"
                            Content="{DynamicResource users}"
                            Style="{DynamicResource SettingButtonsStyle}" />
                        <Label
                            VerticalAlignment="Center"
                            Content="admin"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TertiaryTextColor}" />
                    </StackPanel>
                    <Button
                        Grid.Row="4"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="{DynamicResource exit}"
                        Style="{DynamicResource SettingButtonsStyle}" />

                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Cursor="" Orientation="Horizontal">
                    <Button
                        x:Name="MenuButton"
                        Width="30"
                        Height="30"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="MenuButton_Click"
                        Content="{DynamicResource menu}"
                        Style="{DynamicResource SettingButtonsStyle}">
                        <Button.RenderTransform>
                            <TranslateTransform x:Name="menuButtonTransform" X="0" />
                        </Button.RenderTransform>

                    </Button>
                </StackPanel>

                <StackPanel
                    Grid.Column="4"
                    Height="30"
                    Margin="0,5,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnClose"
                        Click="btnClose_Click"
                        Content="{DynamicResource close}"
                        Style="{StaticResource IconButtonsStyle}"
                        Tag="IsCloseButton" />
                    <Button
                        x:Name="btnMinimize"
                        Click="btnMinimize_Click"
                        Content="{DynamicResource minimize}"
                        Style="{DynamicResource IconButtonsStyle}" />
                </StackPanel>
                <Border Grid.Row="1" CornerRadius="0 0 5 0">
                    <!--  区域  -->
                    <ContentControl Margin="30,0,30,20" prism:RegionManager.RegionName="MainViewRegion" />

                    <!--<Frame
                    x:Name="frameContent"
                    Margin="30,0,30,20"
                    prism:RegionManager.RegionName="MainViewRegion"
                    NavigationUIVisibility="Hidden" />-->
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>
