<UserControl
    x:Class="OveralllAuth_V1.Views.LoginUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OveralllAuth_V1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:OveralllAuth_V1.ViewModels"
    Width="800"
    Height="450"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="30">欢迎登录</TextBlock>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="10"
                Orientation="Horizontal">
                <TextBlock>账号：</TextBlock>
                <TextBox Width="100" Text="{Binding Account}" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Margin="10"
                Orientation="Horizontal">
                <TextBlock>密码：</TextBlock>
                <TextBox Width="100" Text="{Binding Pwd}" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Margin="20"
                Orientation="Horizontal">
                <!--<Button
                Margin="20"
                Background="#409eff"
                Command="{Binding LoginCmm}">
                登录
                </Button>-->
                <!--<Button Margin="20">取消</Button>-->
                <Border
                    Width="40"
                    Height="20"
                    Margin="20"
                    Background="#409eff"
                    BorderBrush="AliceBlue"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding LoginCmm}">
                        登录
                    </Button>
                </Border>
                <Border
                    Width="40"
                    Height="20"
                    Background="Wheat"
                    BorderBrush="AliceBlue"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Button Background="Transparent" BorderThickness="0">取消</Button>
                </Border>
            </StackPanel>
        </Grid>
    </StackPanel>

</UserControl>
